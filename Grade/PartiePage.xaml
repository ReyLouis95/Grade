<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grade.PartiePage"
             Title="PartiePage">

    <Grid ColumnDefinitions="*,*"
          RowDefinitions="*, *, *, 0.5*">
        <Image x:Name="ImageReponse"
               Grid.ColumnSpan="2"
                />
        <Button x:Name="Bouton1"
            Text="1"
            Clicked="BoutonProposition_Clicked"
            Grid.Column="0"
                Grid.Row="1"/>
        <Button x:Name="Bouton2"
            Text="2"
            Clicked="BoutonProposition_Clicked"
            Grid.Column="1"
                Grid.Row="1"/>
        <Button x:Name="Bouton3"
            Text="3"
            Clicked="BoutonProposition_Clicked"
            Grid.Column="0"
                Grid.Row="2"/>
        <Button x:Name="Bouton4"
            Text="4"
            Clicked="BoutonProposition_Clicked"
            Grid.Row="2"
                Grid.Column="2"/>
        <Label x:Name="LabelResultat"
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Grid.Row="3"
            Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>